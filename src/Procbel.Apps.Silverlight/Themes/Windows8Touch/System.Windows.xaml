            </VisualStateManager.VisualStateGroups>
            <Rectangle x:Name="Track" MinHeight="15" MinWidth="30" Fill="{telerik:Windows8TouchResource ResourceKey=InvertedBrush}" Opacity="0.2" Margin="1" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
