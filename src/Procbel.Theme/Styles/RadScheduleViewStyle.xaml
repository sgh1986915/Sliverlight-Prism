								<ColumnDefinition/>
                                <ColumnDefinition/>
							</Grid.ColumnDefinitions>
							<StackPanel Margin="0" VerticalAlignment="Top">
								<TextBlock Text="CATEGORY" FontFamily="Segoe UI Semibold" 
										   HorizontalAlignment="Left" VerticalAlignment="Top"
										   FontSize="12" Foreground="{StaticResource StrongBrush}" Margin="0"/>
								<ListBox Background="Transparent" Margin="0,2,0,0" BorderThickness="0"
										 ItemsSource="{Binding Categories}" 
										 
										 SelectedItem="{Binding Occurrence.Appointment.Category, Mode=TwoWay}"
