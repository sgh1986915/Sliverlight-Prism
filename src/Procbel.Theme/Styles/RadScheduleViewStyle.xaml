								<TextBlock TextWrapping="Wrap" Text="{Binding SelectedItem.Contact.Company.Name, ElementName=OpportunitiesCombo, FallbackValue={x:Null}, TargetNullValue={x:Null}}" FontFamily="Segoe UI" 
										   Foreground="{StaticResource BasicBrush}" Opacity="0.7" FontSize="16"/>
