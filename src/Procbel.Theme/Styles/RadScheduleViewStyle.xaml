										<ei:ChangePropertyAction TargetName="OpportunitiesCombo" PropertyName="SelectedValue" Value="{Binding Path=AvailableOpportunities[0], RelativeSource={RelativeSource AncestorType=helpers:ScheduleViewDialogBase}, FallbackValue={x:Null}, TargetNullValue={x:Null}}" />
									</i:EventTrigger>
